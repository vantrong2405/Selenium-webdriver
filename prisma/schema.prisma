datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  password    String
  phoneNumber String
  email       String    @unique
  orders      Order[]   // Quan hệ một-nhiều với Order
}

